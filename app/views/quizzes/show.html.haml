%h2= @quiz.title
%p
	- @quiz.questions.each do |question|
		= question.ask

		- if !question.answers.empty?
			- question.answers.each do |answer|
				%p= "#{answer.response}  =>  #{answer.correctness}"

%p= link_to "Edit quiz", edit_quiz_path(@quiz)

%p= button_to "delete", @quiz, :method=>:delete, confirm: 'Are you sure?'